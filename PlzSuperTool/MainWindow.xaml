<Window x:Class="PlzSuperTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlzSuperTool"
        mc:Ignorable="d"
        Title="PlzSuperTool - By Super Drecks Coder" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Text="PlzSuperTool" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="32" Height="43" Width="181"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,60,0,0" Text="Stadt:" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="30"/>
        <TextBox Text="{Binding Cityname}" HorizontalAlignment="Left" Margin="10,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="18"/>
        <Button Content="OK" Click="ButtonBase_OnClick" HorizontalAlignment="Left" Margin="215,80,0,0" VerticalAlignment="Top" Height="20" Width="60"/>
        <ListBox ItemsSource="{Binding Zips}" Grid.Row="1" Margin="10,0,10,10"/>
    </Grid>
</Window>
